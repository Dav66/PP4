{%extends "base.html.twig"%}

{% block body %}
    {% if error%}
        <div>{{ error.messageKey|trans(error.messageData, 'security')}}</div>
    {% endif %}
<div class="container" style="background-color: rgba(255,255,255,0.1)!important">
    <label style="text-align:center">Connexion</label>
    <form action="{{ path('login')}}" method='post' style="text-align:center">
        <label for="username">Identifiant</label><br>
        <input type="text" id="username" name="_username" value="{{ last_username }}"/><br>
        <label for="password">Mot de passe</label><br>
        <input type="password" id="password" name="_password"/><br>
        
        <button type="submit">login</button>
    </form>
        </div>
{% endblock body %}